# 環境変数設定のサンプルファイル
# このファイルを .env.local にコピーして、実際の値を設定してください

# =============================================================================
# Google Maps API Key (Geocoding & Places API)
# =============================================================================
# 取得方法: https://console.cloud.google.com/
# 必要なAPI: Geocoding API, Places API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# jSTAT MAP API Credentials
# =============================================================================
# 取得方法: https://jstatmap.e-stat.go.jp/
# アカウント登録後、マイページから取得可能
JSTAT_API_KEY=your_jstat_api_key_here
JSTAT_USER_ID=your_email@example.com

# =============================================================================
# Google Sheets API (オプション)
# =============================================================================
# サービスアカウントのJSON credentialsをBase64エンコードして設定
# 取得方法: https://console.cloud.google.com/
# 必要なAPI: Google Sheets API
# GOOGLE_SHEETS_CREDENTIALS=your_base64_encoded_credentials_here

# =============================================================================
# Development Mode
# =============================================================================
# true: モックデータを使用（API呼び出しなし）
# false: 実際のAPIを呼び出す（デフォルト）
NEXT_PUBLIC_USE_MOCK_DATA=false

# =============================================================================
# モックデータのシナリオ（オプション）
# =============================================================================
# 開発モード時に使用するシナリオを選択
# 利用可能な値: gym, cafe, restaurant, etc.
# NEXT_PUBLIC_MOCK_SCENARIO=gym

# =============================================================================
# API Response Capture Mode (開発用)
# =============================================================================
# true: APIレスポンスをファイルに保存（dev-data/captured-responses/）
# false: キャプチャーしない（デフォルト）
# ※開発環境(NODE_ENV=development)でのみ動作します
ENABLE_API_CAPTURE=false
